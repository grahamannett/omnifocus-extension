{
    "manifest_version": 3,
    "name": "OmniFocus Tab Saver",
    "version": "0.1.0",
    "description": "Adds current tab to OmniFocus with AI summary using Chrome's built-in AI (Chrome 138+)",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "optional_permissions": [],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "ai-service.js",
                "content-script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+O",
                "mac": "MacCtrl+Shift+O"
            },
            "description": "Open the OmniFocus Tab Saver popup"
        },
        "addToOmnifocusPopupSummary": {
            "suggested_key": {
                "default": "Alt+Shift+O",
                "mac": "Alt+Shift+O"
            },
            "description": "Open the OmniFocus Tab Saver popup with AI summary"
        }
    }
}